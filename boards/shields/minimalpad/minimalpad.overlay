#include <dt-bindings/zmk/matrix_transform.h>
#include <dt-bindings/zmk/kscan.h>

/ {
    kscan0: kscan0 {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";
        diode-direction = "col2row"; // Adjust if necessary based on diode direction
        row-gpios = <
            &pro_micro 20 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP) /* ROW0 */
            &pro_micro 19 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP) /* ROW1 */
            &pro_micro 18 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP) /* ROW2 */
            &pro_micro 17 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP) /* ROW3 */
        >;
        col-gpios = <
            &pro_micro 8 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)  /* COL0 */
            &pro_micro 9 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)  /* COL1 */
            &pro_micro 10 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP) /* COL2 */
            &pro_micro 11 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP) /* COL3 */
        >;
    };

    keymap_transform: keymap_transform {
        compatible = "zmk,matrix-transform";
        label = "Keymap Transform";
        rows = <4>;
        columns = <4>;
        map = <
            RC(0, 0) RC(0, 1) RC(0, 2) RC(0, 3) /* Row 0 */
            RC(1, 0) RC(1, 1) RC(1, 2) RC(1, 3) /* Row 1 */
            RC(2, 0) RC(2, 1) RC(2, 2) RC(2, 3) /* Row 2 */
            RC(3, 0) RC(3, 1) RC(3, 2) RC(3, 3) /* Row 3 */
        >;
    };

    leds {
        compatible = "zmk,ws2812";
        label = "Key LEDs";
        chain-length = <16>;  /* Number of SK6812 LEDs */
        io-pin = <&pro_micro 5 GPIO_ACTIVE_HIGH>; /* KEY_LEDS pin */
    };

    encoder0: encoder0 {
        compatible = "zmk,rotary-encoder";
        label = "Encoder0";
        a-pin = <&pro_micro 7 GPIO_ACTIVE_HIGH>; /* ENCODER0_L1 */
        b-pin = <&pro_micro 14 GPIO_ACTIVE_HIGH>; /* ENCODER0_L0 */
    };

    chosen {
        zmk,kscan = &kscan0;
        zmk,physical-layout = &keymap_transform;
    };
};
